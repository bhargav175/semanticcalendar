<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhargav.smart.smartTasks" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/docket_logo"
        android:label="@string/app_name"
        android:logo="@drawable/ic_menu_black_18dp"
        android:theme="@style/Theme.MyTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity
            android:name=".activities.TutorialActivity"
            android:label="Tutorial" >
        </activity>

        <activity
            android:name=".activities.UpdateOneTimeTaskActivity"
            android:label="@string/title_update_note" >
        </activity>

        <activity
            android:name=".activities.UpdateRepeatingTaskActivity"
            android:label="@string/title_activity_update_habit" >
        </activity>

        <activity
            android:name=".activities.UpdateTaskListActivity"
            android:label="@string/title_activity_update_tag" >
        </activity>

        <activity
            android:name=".activities.ViewOneTimeTaskActivity"
            android:label="@string/title_activity_view_note" >
        </activity>
        <activity
            android:name=".activities.ViewRepeatingTaskActivity"
            android:label="@string/title_activity_view_habit" >
        </activity>

        <receiver
            android:name=".utils.MyBroadcastReceiver"
            android:process=":remote" >
        </receiver>

        <activity
            android:name=".activities.RepeatingTaskInfoActivity"
            android:label="@string/title_activity_habit_streak" >
        </activity>

        <activity
            android:name=".activities.TaskListActivity"
            android:label="@string/title_activity_tag" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.semantic.semanticOrganizer.semanticcalendar.activities.TagListView" />
        </activity>
        <activity
            android:name=".activities.SuperMain"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.ArchivesActivity"
            android:label="@string/title_activity_archives" >
        </activity>
        <activity
            android:name=".activities.TaskListsActivity"
            android:label="@string/title_activity_goals" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
