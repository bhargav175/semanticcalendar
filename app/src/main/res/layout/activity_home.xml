<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:id="@+id/parentLayout"

    tools:context="com.semantic.semanticOrganizer.semanticcalendar.activities.HomeActivity"
    android:background="#ddd"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLandingLayout"
        android:orientation="vertical"

        android:padding="0dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:id="@+id/noTagsLayout"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="No Tags"
                android:id="@+id/noTagHeading"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/gray_color"
                android:textSize="32sp"
                android:textAlignment="center"

                android:padding="@dimen/material_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add a tag soon"
                android:layout_below="@id/noTagHeading"
                android:id="@+id/noTagSubText"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/gray_color"
                android:textSize="24sp"
                android:singleLine="false"
                android:padding="@dimen/material_padding" />
        </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tagContainerLayout"
                android:visibility="visible"
                android:orientation="vertical"

                >


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagOrganizerMap"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="@dimen/material_light_padding">

                        <ListView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:scrollbars="none"
                            android:divider="@color/transparent"
                            android:id="@+id/cardsListView"
                            android:background="#ddd" />
                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/flowLayout"
                        android:visibility="invisible"
                        android:background="@color/teal_color">

                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rll"

                            android:visibility="visible"
                            android:padding="@dimen/material_light_padding">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Tags"
                                android:id="@+id/tagsFlowLayoutHeadingView"
                                android:textColor="@color/white"
                                android:padding="@dimen/material_padding"
                                android:textSize="@dimen/material_heading_text_size" />



                            <org.apmem.tools.layouts.FlowLayout
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                app:horizontalSpacing="6dip"
                                app:verticalSpacing="12dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tagsFlowLayoutHeadingView"
                                android:id="@+id/tagsAsTags"
                                android:padding="@dimen/material_padding"
                                android:background="@color/white"
                                android:layout_weight="0.8">
                            </org.apmem.tools.layouts.FlowLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_below="@id/tagsAsTags"
                                android:background="@color/light_gray_color"
                                android:padding="@dimen/material_light_padding"
                                android:id="@+id/addTagLayout"
                                android:focusable="true"
                                android:visibility="visible">

                                <android.support.v7.widget.CardView
                                    android:id="@+id/card_view"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white">
                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">




                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:id="@+id/addingTag"
                                            android:visibility="gone">

                                            <EditText
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:id="@+id/addTagEditText"
                                                android:layout_weight="0.8"
                                                android:padding="@dimen/material_padding" />

                                            <ImageView
                                                android:id="@+id/doneButton"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:layout_alignParentRight="true"
                                                android:src="@drawable/ic_action_accept_light"
                                                android:contentDescription="@string/app_name"
                                                android:layout_gravity="center" />

                                            <ImageView
                                                android:id="@+id/delete"
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:layout_alignParentRight="true"
                                                android:src="@drawable/ic_action_cancel_light"
                                                android:contentDescription="@string/app_name"
                                                android:layout_gravity="center" />


                                        </LinearLayout>

                                        <Button
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Add A Tag"
                                            android:id="@+id/addTagButton"
                                            android:padding="@dimen/material_padding"
                                            android:background="@color/blue_color"
                                            android:textColor="@color/white" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                            </RelativeLayout>
                            <ImageView
                                android:id="@+id/clearFlowLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_action_remove"
                                android:contentDescription="@string/app_name"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:padding="@dimen/material_padding" />

                        </RelativeLayout>
                    </ScrollView>

                </RelativeLayout>
            </LinearLayout>


    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        xmlns:fab="http://schemas.android.com/apk/res-auto"

        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:fab_addButtonColorNormal="@color/blue_color"
        fab:fab_addButtonColorPressed="@color/light_blue_500"
        fab:fab_addButtonPlusIconColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue_color"
            fab:fab_colorPressed="@color/light_blue_500"
            fab:fab_icon="@drawable/ic_note_add_white_36dp"
            android:id="@+id/addNoteFab"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue_color"
            fab:fab_colorPressed="@color/light_blue_500"
            fab:fab_icon="@drawable/ic_check_box_white_36dp"
            android:id="@+id/addCheckListab"

            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue_color"
            fab:fab_colorPressed="@color/light_blue_500"
            fab:fab_icon="@drawable/ic_repeat_white_36dp"
            android:id="@+id/addHabitFab"
            />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
