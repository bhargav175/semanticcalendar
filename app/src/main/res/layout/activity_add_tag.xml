<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       tools:context="com.semantic.semanticOrganizer.semanticcalendar.activities.AddTagActivity"
    android:padding="@dimen/material_left_padding">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/light_gray_color"
        android:padding="@dimen/material_padding">

        <TextView
            android:text="Tag Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:textSize="20sp"
            android:id="@+id/titleLabel"
            android:padding="@dimen/material_padding" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagTitle"
            android:layout_below="@+id/titleLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/light_black"
            android:padding="@dimen/material_padding"
            android:textColorHint="@color/gray_color"
            android:hint="Title" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/light_black"
            android:padding="@dimen/material_padding"
            android:layout_below="@id/tagTitle"
            android:hint="Desciption"
            android:textColorHint="@color/gray_color" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archived"
            android:id="@+id/isArchived"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_alignRight="@+id/descriptionText"
            android:layout_alignEnd="@+id/descriptionText"
            android:padding="@dimen/material_padding" />

    </RelativeLayout>

</RelativeLayout>
