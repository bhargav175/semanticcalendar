

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.bhargav.smart.smartTasks.activities.ViewRepeatingTaskActivity"

        >

        <ScrollView


            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/material_padding"
                android:paddingLeft="56dp"
                android:paddingRight="@dimen/material_padding"
                android:paddingBottom="@dimen/material_padding">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="@dimen/material_padding"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textAllCaps="true"
                        android:text="Title"
                        android:id="@+id/textView"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:text="New Text"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:layout_weight="0.6" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/material_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textAllCaps="true"
                        android:text="Description"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="New Text"
                        android:id="@+id/description" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/material_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_weight="0.4"
                        android:text="Category"
                        android:id="@+id/textView5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="New Text"
                        android:id="@+id/category" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/material_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Due"
                        android:id="@+id/textView7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="New Text"
                        android:id="@+id/due" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/material_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Reminder"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="New Text"
                        android:id="@+id/reminder" />
                </LinearLayout>




            </LinearLayout>


        </ScrollView>


    </RelativeLayout>
