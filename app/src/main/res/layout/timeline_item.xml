<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
        android:layout_height="96dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/one"

        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="72dp"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="5:00 PM"
                android:id="@+id/time"
                android:gravity="center"
                android:textSize="@dimen/material_small_text_size"
                android:textColor="@color/pink"
                android:paddingTop="@dimen/material_light_padding" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
          >

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/material_light_padding"
                android:paddingBottom="@dimen/material_light_padding"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
               >

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Learn Math For 5 hours"
                    android:textSize="@dimen/material_medium_text_size"
                    android:textColor="@color/pitch_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Stuff Done"
                    android:id="@+id/text2"
                    android:paddingTop="@dimen/material_light_padding"
                    android:textSize="@dimen/material_small_text_size"
                    android:textColor="@color/gray_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="24dp"
                android:id="@+id/stateBoxLayout">
               

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>