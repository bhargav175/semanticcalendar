<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_color"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/noDueLayout"
        android:padding="@dimen/material_padding"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/noDueDateText"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Due Time "
                android:id="@+id/textView"
                android:textColor="@color/white"
                android:textSize="@dimen/material_heading_text_size"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:id="@+id/noDueDate"
            android:layout_below="@+id/noDueDateText"
            android:layout_marginTop="@dimen/material_padding"
            android:gravity="left"
            android:baselineAligned="false">

            <Button
                android:id="@+id/addDueDateButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="true"
                android:text="Add Due Date"
                android:textColor="@color/teal_color"
                android:textStyle="bold"
                android:padding="@dimen/material_padding" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dueLayout"
        android:gravity="center"
        android:padding="@dimen/material_padding"
        android:visibility="visible">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/spinnerLayout"
            android:layout_marginTop="@dimen/material_padding"
            android:visibility="visible"
            android:gravity="left">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:textSize="@dimen/material_small_text_size"
                android:id="@+id/dateButton"
                android:background="@color/white"
                android:layout_gravity="left"
                android:padding="@dimen/material_light_padding"
                android:layout_marginRight="@dimen/material_padding"
                android:textColor="@color/teal_color" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="New Button"
                android:textSize="@dimen/material_small_text_size"
                android:id="@+id/timeButton"
                android:background="@color/white"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/material_padding"
                android:padding="@dimen/material_light_padding"
                android:textColor="@color/teal_color" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="@dimen/material_medium_text_size"
                android:textColor="@color/red"
                android:gravity="center"
                android:id="@+id/close"
                android:padding="@dimen/material_light_padding"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>