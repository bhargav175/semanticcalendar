<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/simpleLayout"
        android:padding="@dimen/material_padding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="@dimen/material_micro_text_size"
                android:paddingStart="8dp"
                android:textColor="@color/light_black"
                android:layout_weight="0.4"
                android:padding="@dimen/material_padding" />


            <Button
                android:textSize="@dimen/material_micro_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:id="@+id/selectStartDate"
                android:layout_weight="0.6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="@dimen/material_micro_text_size"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:textColor="@color/light_black"
                android:layout_weight="0.4"
                android:padding="@dimen/material_padding" />


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:id="@+id/selectEndDate"
                android:textSize="@dimen/material_micro_text_size"
                android:layout_weight="0.6" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout6"
            android:orientation="horizontal"
            android:id="@+id/linearLayout7"
            android:weightSum="1"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="@dimen/material_micro_text_size"
                android:paddingStart="8dp"
                android:textColor="@color/light_black"
                android:layout_weight="0.4"
                android:padding="@dimen/material_padding" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectHabitType"
                android:layout_weight="0.6" />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout7"
            android:id="@+id/typeContainerUi">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutFixed"

                android:visibility="visible">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout8"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select days"
                        android:id="@+id/textView31"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"

                        android:textColor="@color/pitch_black"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/material_micro_text_size"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/material_light_padding" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout8"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout9"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:gravity="center"
                        android:id="@+id/sundayButton"
                        android:padding="0dp"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:gravity="center"
                        android:id="@+id/mondayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:id="@+id/tuesdayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="W"
                        android:id="@+id/wednesdayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Th"
                        android:id="@+id/thursdayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:gravity="center"
                        android:id="@+id/fridayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S"
                        android:id="@+id/saturdayButton"
                        android:layout_weight="0.14"
                        android:textSize="@dimen/material_micro_text_size" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutFixed"
                android:id="@+id/linearLayoutFlexible"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout11"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Frequency"
                        android:id="@+id/textView5"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/material_micro_text_size"
                        android:paddingStart="8dp"
                        android:textColor="@color/light_black"
                        android:layout_weight="0.4"
                        android:padding="@dimen/material_padding" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/frequencyBase"
                        android:layout_weight="0.6" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/typeContainerUi"
            android:id="@+id/linearLayout10"
            android:layout_marginTop="@dimen/material_padding">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/textView51"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="@dimen/material_micro_text_size"
                android:paddingStart="8dp"
                android:textColor="@color/light_black"
                android:layout_weight="0.4"
                android:padding="@dimen/material_padding" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="@dimen/material_micro_text_size"
                android:id="@+id/selectHabitTime"
                android:layout_weight="0.6" />
            </LinearLayout>


    </RelativeLayout>

</LinearLayout>