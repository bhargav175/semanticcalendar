<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bhargav.smart.smartTasks.activities.HabitStreakActivity"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_color"
        android:focusable="false"
        android:id="@+id/weekInfo"
        android:clickable="false"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/indigo_color"
                android:orientation="vertical"
                android:paddingBottom="@dimen/material_padding">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/info_habit_heading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Go to the Gym"
                        android:textSize="@dimen/material_heading_text_size"
                        android:textColor="@color/white"
                        android:padding="@dimen/material_padding"
                        android:layout_weight="0.8" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateHabitButton"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_edit_white_24dp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/material_padding" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Consistency"
                    android:id="@+id/textView6"
                    android:padding="@dimen/material_padding"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/consistencyRate" >

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/consistencyProgressBar"
                        android:padding="@dimen/material_padding"
                        android:layout_weight="0.7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:id="@+id/textView7"
                        android:layout_weight="0.3"
                        android:padding="@dimen/material_padding"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:id="@+id/textView8"
                    android:padding="@dimen/material_padding"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/progressLayout">


                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:padding="@dimen/material_padding"
                        android:layout_weight="0.7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:id="@+id/textView3"
                        android:layout_weight="0.3"
                        android:padding="@dimen/material_padding"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/dueTodayCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="@dimen/material_padding"
            android:background="@color/white"
            android:paddingBottom="@dimen/material_padding"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="This habit is due today"
                    android:textSize="@dimen/material_medium_text_size"
                    android:textColor="@color/indigo_color"
                    android:padding="@dimen/material_padding"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the buttons below to set the habit activity for this week."
                    android:id="@+id/textView"
                    android:textSize="@dimen/material_medium_text_size"
                    android:padding="@dimen/material_padding" />

            </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/weekCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dueTodayCard"
            android:layout_marginTop="@dimen/material_padding"
            android:background="@color/white"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Week View"
                    android:textSize="@dimen/material_heading_text_size"
                    android:textColor="@color/gray_color"
                    android:padding="@dimen/material_padding" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="26th Nov - 2nd Dec"
                    android:textSize="@dimen/material_simple_text_size"
                    android:textColor="@color/gray_color"
                    android:padding="@dimen/material_padding" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:padding="@dimen/material_padding"
                    android:id="@+id/weekTableLayout" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weekTable" >

                        <TextView
                            android:id="@+id/button1"
                            android:layout_gravity="center"
                            android:text="S"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button2"
                            android:layout_gravity="left|top"
                            android:text="M"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button3"
                            android:layout_gravity="left|top"
                            android:text="T"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button4"
                            android:layout_gravity="left|top"
                            android:text="W"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button5"
                            android:layout_gravity="left|top"
                            android:text="Th"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button6"
                            android:layout_gravity="left|top"
                            android:text="F"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/button7"
                            android:layout_gravity="left|top"
                            android:text="S"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/goToMonthView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="View Full Habit Stats"
                    android:textSize="@dimen/material_medium_text_size"
                    android:textColor="@color/light_blue_500"
                    android:padding="@dimen/material_padding" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekCard"
            android:id="@+id/singleMonthCalendar"
            android:layout_marginTop="@dimen/material_padding"
            android:background="@color/white">







        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>


