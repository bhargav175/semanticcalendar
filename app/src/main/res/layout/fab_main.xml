<?xml version="1.0" encoding="utf-8"?>

<com.getbase.floatingactionbutton.FloatingActionsMenu
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:fab="http://schemas.android.com/apk/res-auto"

android:id="@+id/multiple_actions"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
fab:fab_addButtonColorNormal="@color/pink"
fab:fab_addButtonColorPressed="@color/pink_pressed"
fab:fab_addButtonPlusIconColor="@color/white"
android:layout_marginBottom="16dp"
android:layout_marginRight="16dp"
android:visibility="visible">

<com.getbase.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fab:fab_colorNormal="@color/pink"
    fab:fab_colorPressed="@color/pink_pressed"
    fab:fab_icon="@drawable/ic_list_white_24dp"
    android:id="@+id/addListFab"
    />

<com.getbase.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fab:fab_colorNormal="@color/pink"
    fab:fab_colorPressed="@color/pink_pressed"
    fab:fab_icon="@drawable/ic_note_add_white_36dp"
    android:id="@+id/addOneTimeTaskFab"
    />

<com.getbase.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fab:fab_colorNormal="@color/pink"
    fab:fab_colorPressed="@color/pink_pressed"
    fab:fab_icon="@drawable/ic_check_box_white_36dp"
    android:id="@+id/addCheckListab"

    />
<com.getbase.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fab:fab_colorNormal="@color/pink"
    fab:fab_colorPressed="@color/pink_pressed"
    fab:fab_icon="@drawable/ic_repeat_white_36dp"
    android:id="@+id/addRepeatingTaskFab"
    />


</com.getbase.floatingactionbutton.FloatingActionsMenu>