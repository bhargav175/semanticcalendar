<?xml version="1.0" encoding="utf-8"?>




<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bhargav.smart.smartTasks.activities.AddOneTimeTaskActivity"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true" android:focusableInTouchMode="true"
    android:background="@color/white"
    tools:context="com.bhargav.smart.smartTasks.activities.AddOneTimeTaskActivity"
    android:padding="@dimen/material_light_padding"
    android:id="@+id/re">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_padding"
        android:id="@+id/parentLayout">



            <com.bhargav.smart.smartTasks.helpers.InlineEditable
                android:id="@+id/noteTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical"
                android:textColor="@color/light_black"
                android:textColorHint="@color/gray_color"
                android:background="@drawable/inline_editable"
                android:padding="@dimen/material_light_padding"/>

    </RelativeLayout >

    <RelativeLayout
        android:id="@+id/parentLayout2"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_padding"
        android:padding="@dimen/material_padding">



            <com.bhargav.smart.smartTasks.helpers.InlineEditable
                android:id="@+id/noteDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:padding="@dimen/material_light_padding"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical"
                android:textColor="@color/light_black"
                android:textColorHint="@color/gray_color" />
        </RelativeLayout>






    <LinearLayout
        android:id="@+id/parentLayout3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_padding"
        android:padding="@dimen/material_padding">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pitch_black"
            android:text="Category"
            android:layout_weight="0.4"
            android:id="@+id/categoryTextView"
           />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/categorySelectSpinner"
                android:layout_marginLeft="@dimen/material_padding"
                android:gravity="right"
                android:layout_weight="0.6"
                android:paddingLeft="@dimen/material_padding" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/parentLayout3"
        android:id="@+id/dueDateLayout"
        android:padding="@dimen/material_padding">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:layout_weight="0.4"
            android:id="@+id/showDueDateText"
            android:paddingBottom="@dimen/material_padding"
            android:textColor="@color/pitch_black"
             />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="0.6"
            android:id="@+id/showDueDate"
            android:visibility="visible"
            android:clickable="true"
            android:textColor="@color/blue_color"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/parentLayout4"
        android:layout_width="fill_parent"
        android:layout_below="@id/dueDateLayout"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pitch_black"
            android:text="State"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/stateTextView"
            android:layout_weight="0.6"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/parentLayout6"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout4"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_padding"
        android:padding="@dimen/material_padding">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:id="@+id/hasReminderSwitch" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/parentLayout7"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout6"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_padding">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Archived"
            android:textOn="Yes"
            android:textOff="No"
            android:id="@+id/isArchivedSwitch" />

    </LinearLayout>




</RelativeLayout>


</ScrollView>

