<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/light_gray_color"
    tools:context="com.semantic.semanticOrganizer.semanticcalendar.activities.AddNoteActivity"
    android:padding="@dimen/material_light_padding"
    android:id="@+id/re">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentLayout"
        android:padding="@dimen/material_padding"
        android:background="@color/white">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <com.semantic.semanticOrganizer.semanticcalendar.helpers.InlineEditable
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noteTitle"
                android:hint="@string/write_note_text_hint"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:textColorHint="@color/gray_color"
                android:textColor="@color/light_black" />

</RelativeLayout>
    </android.support.v7.widget.CardView >


      <android.support.v7.widget.CardView
          android:orientation="vertical"
          android:id="@+id/parentLayout2"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout"
        android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/material_padding"
          android:padding="@dimen/material_padding"
          android:background="@color/white">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archived"
                android:id="@+id/isArchived"
                android:checked="false" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectSpinner"
                android:layout_below="@+id/isArchived"
                android:layout_marginTop="@dimen/material_padding" />



        </RelativeLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_below="@id/parentLayout2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_padding"
        android:padding="@dimen/material_padding"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout4"
            android:orientation="horizontal"
            android:id="@+id/remainderContainer">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Reminder"
                android:id="@+id/addReminder"
                android:background="#fff"
                android:textColor="@color/blue_bright"
                android:padding="@dimen/material_padding" />
        </RelativeLayout>
    </android.support.v7.widget.CardView >

</RelativeLayout>
