<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <!--Theme is edited here-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CircleStyle</item>
        <item name="android:windowBackground">@color/white_opaque</item>
        <item name="android:colorBackground">@color/pitch_black</item>
        <!--<item name="android:spinnerItemStyle">@style/SpinnerItem</item>-->
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemSytle</item>




        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
    </style>



    <style name="CustomCalendar" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/cs_textcolor</item>
        <item name="android:weekNumberColor">@color/red</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
        <item name="android:unfocusedMonthDateColor">@color/whitesmoke</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Base.Widget.PopupMenu.Large</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Small</item>
    </style>
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <!--<item name="android:background">@color/indigo_color</item>-->
        <item name="actionBarDivider">@null</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:height">56dp</item>
        <item name="actionBarSize">56dp</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:actionBarSize">56dp</item>


    </style>
    <style name="MyActionBarTab"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:height">56dp</item>
    </style>
    <style name="CircleStyle" parent="Widget.CirclePageIndicator">
        <item name="unselectedColor">@android:color/white</item>
        <item name="centered">true</item>
        <item name="strokeColor">@null</item>
        <item name="pageColor">@android:color/white</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!--&lt;!&ndash;<item name="android:textColor">@android:color/white</item>&ndash;&gt;-->
        <item name="android:drawablePadding">@dimen/material_padding</item>
    </style>

    <style name="Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:clickable">true</item>


    </style>
    <style name="SpinnerItemSytle" parent="android:Widget.Holo.Light.TextView.SpinnerItem">
        <item name="android:padding">8dp</item>

    </style>



    <style name="Widget.CirclePageIndicator" parent="Widget">
        <item name="centered">@bool/default_circle_indicator_centered</item>
        <item name="fillColor">@color/default_circle_indicator_fill_color</item>
        <item name="pageColor">@color/default_circle_indicator_page_color</item>
        <item name="radius">@dimen/default_circle_indicator_radius</item>
        <item name="snap">@bool/default_circle_indicator_snap</item>
        <item name="strokeColor">@color/default_circle_indicator_stroke_color</item>
        <item name="strokeWidth">@dimen/default_circle_indicator_stroke_width</item>
    </style>
    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
